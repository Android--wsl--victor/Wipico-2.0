package com.chinasvc.wipico.player;

/**
 * 音频控制接收监听器
 * */
public interface AudioReceiveListener {

	/**
	 * 打开指定路径音乐
	 * 
	 * @param path
	 *                音频文件路径
	 * */
	public void openAudio(String path);

	/**
	 * 设置当前进度
	 * 
	 * @param progress
	 *                当前进度值
	 * */
	public void setAudioProgress(int progress);

	/**
	 * 停止
	 * */
	public void stop();

	/**
	 * 暂停
	 * */
	public void pause();

	/**
	 * 播放
	 * */
	public void play();

	/**
	 * 静音
	 * */
	public void mute();

	/**
	 * 非静音
	 * */
	public void disMute();

	/**
	 * 减小音量
	 * */
	public void decreaseVolume();

	/**
	 * 增加音量
	 * */
	public void addVolume();

}