<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_activity_dark"
    android:orientation="vertical" >

    <include layout="@layout/layout_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <com.chinasvc.wipicophone.widget.MouseKey
                android:id="@+id/mouse_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_mouse_left_selector" />

            <com.chinasvc.wipicophone.widget.WheelView
                android:id="@+id/mouse_mid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dip"
                android:layout_marginTop="4dip"
                android:layout_weight="1.2"
                android:background="@drawable/bg_mouse_middle" />

            <ImageView
                android:id="@+id/mouse_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/bg_mouse_right_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" >

            <com.chinasvc.wipicophone.widget.DirectionView
                android:id="@+id/mouse_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_mouse_touch" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>