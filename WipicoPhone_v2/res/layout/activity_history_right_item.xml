<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dip"
    android:paddingLeft="16dip"
    android:paddingRight="4dip"
    android:paddingTop="4dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/history_right_item_selector" >

        <TextView
            android:id="@+id/user "
            android:layout_width="match_parent"
            android:layout_height="24dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dip"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="接收自M030"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="sans" />

        <ImageView
            android:id="@+id/type"
            android:layout_width="46dip"
            android:layout_height="46dip"
            android:layout_below="@id/user "
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:scaleType="centerInside"
            android:src="@drawable/history_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/type"
            android:layout_margin="2dp"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@id/type"
            android:singleLine="true"
            android:text="文件名"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:typeface="sans" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@id/type"
            android:max="100"
            android:maxHeight="3dip"
            android:minHeight="3dip"
            android:progress="0"
            android:progressDrawable="@drawable/player_controller_progressbar" />

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_margin="2dp"
            android:layout_marginRight="8dip"
            android:layout_toRightOf="@id/type"
            android:singleLine="true"
            android:text="进度条"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:typeface="sans" />
    </RelativeLayout>

</LinearLayout>