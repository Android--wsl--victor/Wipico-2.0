<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bg_actionbar_size"
    android:background="#ff212121"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/turn_left"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12dip"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:scaleType="centerInside"
        android:src="@drawable/image_player_turnleft" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12dip"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:scaleType="centerInside"
        android:src="@drawable/image_player_play" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12dip"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:scaleType="centerInside"
        android:src="@drawable/image_player_stop" />

    <ImageView
        android:id="@+id/turn_right"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_weight="1"
        android:background="@drawable/list_item_selector"
        android:scaleType="centerInside"
        android:src="@drawable/image_player_turnright" />

</LinearLayout>