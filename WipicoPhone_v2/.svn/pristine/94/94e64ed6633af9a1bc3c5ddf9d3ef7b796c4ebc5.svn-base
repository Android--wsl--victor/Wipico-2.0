<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/setting_summary_device"
            android:textColor="#ff7B7B7B"
            android:textSize="16sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_connect"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_top_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_connect" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/setting_connect_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_connect"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ffD2D2D2"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/setting_disconnect"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_middle_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_disconnect" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_disconnect"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ffD2D2D2" />

            <LinearLayout
                android:id="@+id/setting_wlan"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_middle_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_wlan" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_wlan"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ffD2D2D2" />

            <LinearLayout
                android:id="@+id/setting_device_wlan"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_bottom_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_wlan" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_device_wlan"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!--  -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dip"
            android:text="@string/setting_summary_function"
            android:textColor="#ff7B7B7B"
            android:textSize="16sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_top_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_voice" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_voice"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <com.chinasvc.wipicophone.widget.SlipButton
                    android:id="@+id/voice"
                    android:layout_width="54dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="12dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ffD2D2D2"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_middle_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_vibrations" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_vibration"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <com.chinasvc.wipicophone.widget.SlipButton
                    android:id="@+id/vibration"
                    android:layout_width="54dip"
                    android:layout_height="20dip"
                    android:layout_marginRight="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!--  -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dip"
            android:text="@string/setting_summary_other"
            android:textColor="#ff7B7B7B"
            android:textSize="16sp"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_setting_item"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/setting_help"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_top_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_help" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_help"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#ffD2D2D2"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/setting_about"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@drawable/setting_item_middle_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/setting_about" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_item_about"
                        android:textColor="#FF595959"
                        android:textSize="14sp"
                        android:typeface="sans" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_list_arrow" />
            </LinearLayout>
        </LinearLayout>

        <!--  -->

    </LinearLayout>

</ScrollView>