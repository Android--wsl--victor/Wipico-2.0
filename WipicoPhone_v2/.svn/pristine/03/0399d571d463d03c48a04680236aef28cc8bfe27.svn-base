<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true"><shape>
            <stroke android:width="1px" android:color="#ff008cd6" />

            <solid android:color="@color/bg_activity" />

            <padding android:bottom="6px" android:left="6px" android:right="6px" android:top="6px" />

            <corners android:radius="5dip" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#ff008cd6" />

            <solid android:color="@color/bg_activity" />

            <padding android:bottom="6px" android:left="6px" android:right="6px" android:top="6px" />

            <corners android:radius="5dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <stroke android:width="1px" android:color="#ff008cd6" />

            <solid android:color="@color/bg_activity" />

            <padding android:bottom="6px" android:left="6px" android:right="6px" android:top="6px" />

            <corners android:radius="5dip" />
        </shape></item>
    <item><shape>
            <stroke android:width="1px" android:color="#ff989898" />

            <solid android:color="@color/bg_activity" />

            <padding android:bottom="6px" android:left="6px" android:right="6px" android:top="6px" />

            <corners android:radius="5dip" />
        </shape></item>

</selector>