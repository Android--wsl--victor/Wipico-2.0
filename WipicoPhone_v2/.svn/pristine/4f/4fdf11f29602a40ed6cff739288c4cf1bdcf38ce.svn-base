<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gridview_column_3_width"
    android:layout_height="@dimen/gridview_column_3_width" >

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="@dimen/gridview_column_3_width"
        android:layout_height="@dimen/gridview_column_3_width"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_gallery_item"
        android:contentDescription="@null"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image_default" />

    <ImageView
        android:id="@+id/imageState"
        android:layout_width="38dip"
        android:layout_height="38dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play"
        android:visibility="visible" />

</RelativeLayout>